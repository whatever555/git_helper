{
    "name": "Git Helper",
    "description": "Find issues in Git",
    "version": "2.0",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background": {
        "scripts": ["background.js", "jquery.js"],
        "persistent": false
    },
        "browser_action": {
        "default_title": "Git Helper"
    },
    "content_scripts": [
        {
            "matches": ["https://www.github.com/*","http://www.github.com/*","https://github.com/*","http://github.com/*"],
            "js": ["jquery.js"],
            "css": [ "menu.css", "mui.min.css"]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },  
    "web_accessible_resources": [
        "rules.json",
        "menu.template.html"
    ],
    "manifest_version": 2
}
