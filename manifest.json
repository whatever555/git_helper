{
    "name": "Git Helper",
    "description": "Find issues in Git",
    "version": "2.0",
    "permissions": [
        "activeTab"
    ],
    "background": {
        "scripts": ["background.js", "jquery.js"],
        "persistent": false
    },
        "browser_action": {
        "default_title": "Git Helper"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*","https://*/*"],
            "js": ["jquery.js"]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },  
    "web_accessible_resources": [
        "rules.json"
    ],
    "manifest_version": 2
}
